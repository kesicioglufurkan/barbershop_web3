@model IEnumerable<barbershop_web3.Models.Employee>

@{
    ViewData["Title"] = "Çalışan Listesi";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-info">
    @TempData["msj"]
</div>

<table class="table">
    <thead>
        <tr>
            <th>Çalışan Adı</th>
            <th>Salon Adı</th>
            <th>Toplam Para</th>
            <th>Toplam Çalışma Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeName</td>
                <td>@employee.Saloon?.SaloonName</td>
                <td>@employee.totalMoney ?? 0</td>
                <td>@employee.totelWorkHour ?? 0</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-success" href="@Url.Action("Create", "Employee")">Yeni Çalışan Ekle</a>
</div>
