@model IEnumerable<barbershop_web3.Models.Employee>

@{
    ViewData["Title"] = "Çalışan Listesi";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-info">
    @TempData["msj"]
</div>

<table class="table">
    <thead>
        <tr>
            <th>Çalışan Adı</th>
            <th>Salon Adı</th>
            <th>Toplam Para</th>
            <th>Toplam Çalışma Saati</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeName</td>
                <td>@employee.Saloon?.SaloonName</td>
                <td>@employee.totalMoney</td>
                <td>@employee.totelWorkHour</td>
                <td>
                    <!-- Edit butonu -->
                    <a href="@Url.Action("employeeEdit", "Employee", new { id = employee.EmployeeID })" class="btn btn-warning btn-sm">Edit</a>

                    <a asp-action="employeeDelete" asp-route-id="@employee.EmployeeID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-success" href="@Url.Action("employeeCreate", "Employee")">Yeni Çalışan Ekle</a>
</div>
