@model IEnumerable<barbershop_web3.Models.Service>

@{
    ViewData["Title"] = "Services List";
}

<h2>Services List</h2>

<div class="text-end mb-3">
    <a asp-action="serviceCreate" class="btn btn-primary">Add New Service</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Service Name</th>
            <th>Time (Hour)</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var service in Model)
            {
                <tr>
                    <td>@service.ServiceID</td>
                    <td>@service.ServiceName</td>
                    <td>@service.Time</td>
                    <td>@service.Price.ToString("C")</td> <!-- Para birimi formatında gösterim -->
                    <td>
                        <a asp-action="serviceEdit" asp-route-id="@service.ServiceID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="serviceDelete" asp-route-id="@service.ServiceID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No services found.</td>
            </tr>
        }
    </tbody>
</table>
