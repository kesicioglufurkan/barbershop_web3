<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - barbershop_web3</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/barbershop_web3.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" >Barber Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" >Ana Sayfa</a>

                        </li>
                        

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointments" asp-action="appoCreate">Randevu Al</a>
                            </li>
							
                           
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a href="@Url.Action("AdminPanel", "Users")" class="nav-link admin-link">Admin Paneli</a>
                                </li>
                                 <li class="nav-item">
                                    <a href="@Url.Action("employeeCreate", "Employee")" class="nav-link admin-link">Personel Ekle</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("serviceCreate", "Services")" class="nav-link admin-link">Servis Ekle</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("SaloonCreate", "Saloons")" class="nav-link admin-link">Salon Ekle</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("userAdd", "Users")" class="nav-link admin-link">Kullanıcı Ekle</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link admin-link" href="/api/SaloonApi">API</a>
                                </li>
                           
                            }

                            <li class="nav-item">
                                <a href="@Url.Action("Logout", "Users")" class="nav-link admin-link">Çıkış Yap</a>
                            </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    }else{
    <!--Kullanıcı giriş yapmadıysa farklı bir içerik veya boş sayfa -->
    @RenderBody()
    }
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - barbershop
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
