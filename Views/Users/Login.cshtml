@model barbershop_web3.Models.User

@{
    ViewData["Title"] = "Kullanıcı Girişi";
}

<h2>@ViewData["Title"]</h2>

<div class="alert-danger">
    @TempData["msj"]
</div>



<div class="row center-form">
    <div class="col-md-6">
        
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserNick" class="control-label"></label>
                <input asp-for="UserNick" class="form-control" />
                <span asp-validation-for="UserNick" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserPass" class="control-label"></label>
                <input asp-for="UserPass" class="form-control" type="password" />
                <span asp-validation-for="UserPass" class="text-danger"></span>
            </div>

            
            <div class="form-group text-center">
                <input type="submit" value="Giriş" class="btn btn-primary btn-custom-form" />
            </div>
        </form>
        <a asp-action="userAdd" class="git">Kaydol</a>
    </div>
</div>


