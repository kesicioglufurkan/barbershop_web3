@model barbershop_web3.Models.User

<div class="alert-danger">
    @TempData["msj"]
</div>

<div class="row">
    <div class="col-md-6">
        <h2>User Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserNick" class="control-label"></label>
                <input asp-for="UserNick" class="form-control" />
                <span asp-validation-for="UserNick" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserPass" class="control-label"></label>
                <input asp-for="UserPass" class="form-control" type="password" />
                <span asp-validation-for="UserPass" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

    <a asp-action="userAdd">Kaydol</a>
</div>


