@model IEnumerable<barbershop_web3.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2>@ViewData["Title"]</h2>

<div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
</div>

<table class="table custom-table">
    <thead>
        <tr>
            <th>#</th>
            <th>User Name</th>
            <th>User Nick</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.UserName</td>
                <td>@user.UserNick</td>
                <td>
                    <form asp-action="UserDelete" asp-route-id="@user.UserID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-custom-table"
                                onclick="return confirm('Are you sure you want to delete this user?');">
                            Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="userAdd" class="btn btn-primary btn-custom-table">Yeni Kullanıcı Ekle</a>
</div>
