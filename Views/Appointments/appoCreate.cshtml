@model barbershop_web2.Models.Appointment

<div class="container mt-4">
    <h2>Create Appointment</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="appoCreate" method="post">
        <!-- User ID Input -->
        <div class="form-group">
            <label asp-for="UserID" class="control-label"></label>
            <input asp-for="UserID" class="form-control" placeholder="Enter your User ID" />
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>

        <!-- Employee Dropdown -->
        <div class="form-group">
            <label asp-for="EmployeeID" class="control-label"></label>
            <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeList">
                <option value="">-- Select an Employee --</option>
            </select>
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>

        <!-- Service Dropdown -->
        <div class="form-group">
            <label asp-for="ServiceID" class="control-label"></label>
            <select asp-for="ServiceID" class="form-control" asp-items="ViewBag.ServiceList">
                <option value="">-- Select a Service --</option>
            </select>
            <span asp-validation-for="ServiceID" class="text-danger"></span>
        </div>

        <!-- Appointment Time -->
        <div class="form-group">
            <label asp-for="AppointmentTime" class="control-label"></label>
            <input asp-for="AppointmentTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
        </div>


        <!-- Submit Button -->
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create Appointment</button>
        </div>
    </form>

    <!-- Back Link -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
