@{
    ViewBag.Title = "Sonuç";
}

<h2>Yüz Şekli Analizi Sonucu</h2>

@if (ViewBag.FaceShape != null)
{
    <p>Yüz Şekliniz: <strong>@ViewBag.FaceShape</strong></p>
}
else
{
    <p>Yüz şekli algılanamadı.</p>

}
    

@if (ViewBag.SuggestionImage != null)
{
    <h3>Saç Önerisi:</h3>
    <!-- Resmin doğru şekilde gösterilmesi için Flask'tan dönen URL'yi kullan -->

    <img src="@ViewBag.SuggestionImage" alt="Saç Önerisi" />
}
else
{
    <p>Uygun saç önerisi bulunamadı.</p>
}
